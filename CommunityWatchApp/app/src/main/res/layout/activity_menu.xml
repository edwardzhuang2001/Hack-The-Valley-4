<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E80F4E6D"
    tools:context=".Menu">

    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="365dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:onClick="clickedNotif"
        android:text="Notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReport"
        android:layout_width="365dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:onClick="clickedReport"
        android:text="Report an incident"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotifications" />

    <Button
        android:id="@+id/btnEmergency"
        android:layout_width="361dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:onClick="clickedEmergency"
        android:text="Send an Emergency Request to the police"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReport" />

</androidx.constraintlayout.widget.ConstraintLayout>