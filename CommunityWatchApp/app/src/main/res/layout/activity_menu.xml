<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E80F4E6D"
    tools:context=".Menu">

    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="362dp"
        android:layout_height="73dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="25dp"
        android:text="Notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNotifications2"
        android:layout_width="362dp"
        android:layout_height="73dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:text="Report an Incident"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotifications" />

    <Button
        android:id="@+id/btnNotifications3"
        android:layout_width="362dp"
        android:layout_height="73dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:text="Send Emergency Alert to the Police"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotifications2" />
</androidx.constraintlayout.widget.ConstraintLayout>